$('input:radio[name="benefits"]').change(function(){
    if ($(this).val() == 'yes_benefits') {
        $('.hidden_thing').show();
    }else {
        $('.hidden_thing').hide();
    }
});

var form = $('form#passports');
form.submit(function (e) {
  event.preventDefault();
  if ($('input.no_option:checked', form).length > 0) {
    window.location = "/carers_allowance_yes"
  }
  else {
    window.location = "http://frozen-harbor-2592.herokuapp.com/questions/1"
  }
});
</script>

